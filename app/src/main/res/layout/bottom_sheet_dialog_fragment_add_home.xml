<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context=".features.home.ui.views.fragments.AddHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_gravity="center|top" />

        <TextView
            android:id="@+id/bottom_sheet_fragment_join_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_normal"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/title_text_add_home"
            android:textAlignment="center"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/bottom_sheet_fragment_join_home_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_text_add_home_unique_id"
            android:textAlignment="center"
            android:textSize="@dimen/font_small" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bottom_sheet_fragment_join_home_homeId_input_layout"
            style="@style/InputText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:hint="@string/label_input_home_id"
            app:boxCornerRadiusBottomEnd="@dimen/input_layout_box_corner_radius"
            app:boxCornerRadiusBottomStart="@dimen/input_layout_box_corner_radius"
            app:boxCornerRadiusTopEnd="@dimen/input_layout_box_corner_radius"
            app:boxCornerRadiusTopStart="@dimen/input_layout_box_corner_radius">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/input_padding"
                android:paddingEnd="@dimen/input_padding" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/spacing_normal" />

        <Button
            android:id="@+id/button"
            style="@style/PrimaryButton"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/button_text_confirm" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>