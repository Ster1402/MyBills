<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Input -->
    <style name="InputText">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:ems">10</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:importantForAutofill">no</item>
        <item name="paddingStart">14dp</item>
    </style>

    <!-- Buttons -->
    <style name="PrimaryButton">
        <item name="android:layout_width">@dimen/button_width_large</item>
        <item name="backgroundTint">@color/royal_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
</resources>