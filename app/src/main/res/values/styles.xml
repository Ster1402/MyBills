<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dividers-->
    <style name="DividerSolidCard">
        <item name="android:layout_width">@dimen/divider_width_large</item>
        <item name="android:layout_height">@dimen/divider_height_normal</item>
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="DividerDashedImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="srcCompat">@drawable/divider_dashed</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Widget.Theme.MyBills.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Icon" parent="MaterialAlertDialog.Material3.Title.Icon">
        <item name="icon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Widget.App.Button.Neutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="Widget.App.Button.Positive" parent="Widget.App.Button.Neutral">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Widget.App.Button.Negative" parent="Widget.App.Button.Neutral">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>